#show-contain(ng-controller='ShowCtrl')
  div.row
    div.small-5.large-4.columns.panel
      h4.animated.fadeInLeft {{user.username}}
      .picture(style='border-radius: 25%; background-image: url("{{user.profilePic}}"); background-repeat: none; background-size: cover; height: 300px; width: 300px;')
    div.small-1.large-1.columns
    div.small-6.large-7.columns.panel.bio
      h5 Age: {{user.age}}
      h5 Location: {{user.location}}
      h5 E-mail: {{user.email}}
      h5 Phone Number: {{user.phoneNum}}
      

  #middle
    #content
      #show

        ul.slide(rn-carousel='currentImageSet')
          li(ng-repeat='image in currentImageSet')
            .layer(style='width: 100%; height: 100%; border: 1px solid black; background-image: url({{image}}); background-position: center; background-size: cover')


    // middle end
    .clear

  video#video
  button.webPhoto(ng-click='takePhoto()') Take photo
  canvas#canvas
  img#photo(ng-model='userPhoto')
  button.webPhoto(ng-click='savePic()') Save Pic?

  h2 {{user.photo}}
  
  .row
    .large-9.large-offset-2.columns
    table.table.table-bordered(style='width: 100%')
      thead
        tr
          th(width=250) Site
          th(width=250) Images
          th(width=250) Chart Data
      tbody
        tr(ng-repeat= 'search in searchHistory')
          td {{search.mainUrl}}
          td(ng-click='viewImages(search.images)'): a(href='') View Images
          td: a.button(ng-click='displayChart(search.statistics)') Click for Chart
  
  .row
    .small-12.columns
      #chartdiv(style='width: 100%; height: 1500px; background-color: rgba(211,211,211, 0.6);')
      

          
